<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/spacing_micro"
    android:layout_height="wrap_content"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/resource_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:padding="@dimen/spacing_micro"
                android:id="@+id/resource_thumbnail"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:src="@drawable/horse_logo"
                android:visibility="gone"
                tools:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/resource_recommend_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_micro">

                    <TextView
                        android:id="@+id/resource_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="20sp"
                        tools:text="5"/>

                    <TextView
                        android:id="@+id/resource_recommend_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Recommend this?"/>

                    <ImageView
                        android:id="@+id/resource_recommend_button"
                        android:layout_width="@dimen/spacing_triple"
                        android:layout_height="@dimen/spacing_triple"
                        android:gravity="center"
                        app:srcCompat="@drawable/recommended_button"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/resource_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/spacing_micro"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    tools:text="Title"
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/resource_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resource_title_layout"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center"
            tools:text="Description of the resource that should make you want to click on it, \n\nI think that this video is really special"/>


    </LinearLayout>
</android.support.v7.widget.CardView>