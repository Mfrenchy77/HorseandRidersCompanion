<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_rider_skill_tree"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_skill_button"
            android:layout_width="@dimen/spacing_triple"
            android:layout_height="@dimen/spacing_triple"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/DarkSlateGray"
            android:src="@drawable/vector_add"
            android:tint="@color/white"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/skill_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/empty_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_normal"
        android:text="@string/empty_skill"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>