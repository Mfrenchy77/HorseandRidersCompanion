<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:Tools="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/spacing_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_rider_last_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            tools:text="edited: 4 days ago "
            />

        <TextView
            android:id="@+id/profile_rider_last_edit_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            tools:text=" By:Administrator Extraordinaire"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_background"
        android:padding="@dimen/spacing_double"
        android:src="@drawable/horse_logo"/>


    <TextView
        android:id="@+id/profile_rider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_double"
        android:gravity="center"
        android:text="Johnny McNutface"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/profile_rider_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        tools:text="Email: johnnyMcNutz@aol.com"
        />

    <TextView
        android:id="@+id/profile_rider_subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        tools:text="you are subscribed \nExpires: 4 months"
        />

    <TextView
        android:id="@+id/profile_rider_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        tools:text="you are an editor and have the power to edit and adjust large portions of the data, blah balh"
        />

</LinearLayout>