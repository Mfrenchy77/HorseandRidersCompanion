<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/create_resource_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacing_normal"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="@dimen/spacing_normal"
    app:cardElevation="6dp"
    tools:context=".view.resources.CreateResourceActivity">

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/toolbar_horse_and_rider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/create_resource_thumbnail"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="@dimen/spacing_micro"
                    android:scaleType="fitCenter"
                    android:src="@drawable/horse_logo"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/create_resource_title_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/create_resource_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Title"
                        android:inputType="textCapSentences|textMultiLine|textAutoComplete|textAutoCorrect"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/post_content_link_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/create_resource_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/resource_create_link_hint"
                    android:inputType="textUri"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_resource_description_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal">

                <android.support.design.widget.TextInputEditText

                    android:id="@+id/create_resource_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:inputType="textCapSentences|textMultiLine|textAutoComplete|textAutoCorrect"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/create_resource_skill_tree_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/create_resource_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/spacing_double"
                android:background="@drawable/button_background"
                android:elevation="4dp"
                android:padding="12dp"
                android:text="@string/submit"/>
        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>

