<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/resource_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/resource_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/resource_thumbnail"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:src="@drawable/horse_logo"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView

                android:id="@+id/resource_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/spacing_normal"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:text="Title"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/resource_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center"
            tools:text="Description of the resource that should make you want to click on it, \n\nI think that this video is really special"/>

        <LinearLayout
            android:id="@+id/resource_rating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/resource_rating_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                app:srb_fillColor="@color/green_light"
                app:srb_numberOfStars="5"
                app:srb_rating="3.3"
                app:srb_starBorderWidth="1"
                app:srb_starSize="30dp"
                app:srb_stepSize="0.1"
                />

            <TextView
                android:id="@+id/resource_rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/spacing_normal"
                android:gravity="center"
                tools:text="5"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/empty_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_double"
        android:text="@string/empty_resource"
        android:visibility="gone"
        tools:visibility="visible"/>
</FrameLayout>