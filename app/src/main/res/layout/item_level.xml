<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/editor_level_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/level_up"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_nano"
            android:layout_marginTop="@dimen/spacing_nano"
            android:layout_weight="1"
            android:background="@color/SlateGray"
            android:scaleType="fitCenter"
            android:src="@drawable/vector_expand_less"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/level_down"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_nano"
            android:layout_marginTop="@dimen/spacing_nano"
            android:layout_weight="1"
            android:background="@color/SlateGray"
            android:scaleType="fitCenter"
            android:src="@drawable/vector_expand_more"
            android:tint="@color/white"/>


    </LinearLayout>

    <TextView
        android:id="@+id/level_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_normal"
        android:layout_weight="1"
        android:gravity="center|end"
        android:textColor="@color/white"
        tools:text="Excessively long Level Name Level Name"/>

    <View
        android:id="@+id/level_indicator"
        android:layout_width="@dimen/spacing_triple"
        android:layout_height="fill_parent"
        android:background="@drawable/level_indicator_background_complete"/>


</LinearLayout>